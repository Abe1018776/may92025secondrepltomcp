# Try with the simplest, most direct 'run' command first.
# If this gets a linter error but WORKS, we ignore the linter for now.
run = "streamlit run app.py"
modules = ["python-3.11"]

# Only include [nix] if you are sure you need this specific channel
# and it's not causing issues. Often, Replit's default Nix setup is fine.
[nix]
channel = "stable-24_05"

# Keep the deployment section as it's for a different purpose (hosting)
# and its syntax is usually more stable.
[deployment]
run = ["sh", "-c", "streamlit run app.py --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false --server.enableWebsocketCompression=false"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Streamlit App"

[[workflows.workflow]]
name = "Run Streamlit App"
author = 22737092
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_env.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.headless=true --server.address=0.0.0.0 --server.port=8000"

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8501
externalPort = 80

[[ports]]
localPort = 8502
externalPort = 3000

[[ports]]
localPort = 8503
externalPort = 3001

[[ports]]
localPort = 8504
externalPort = 3002

[[ports]]
localPort = 8505
externalPort = 3003

[[ports]]
localPort = 8506
externalPort = 4200

